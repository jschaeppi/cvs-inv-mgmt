pipeline {
    agent any
     def registry = "jschaeppi6609/cvs-inv-mgmt"
     def imageBuild = ''

    tools {
        // Install the Maven version configured as "M3" and add it to the path.
        maven "Maven"
    }

    stages {
        stage('Build') {
            steps {
                // Get some code from a GitHub repository
                git 'https://github.com/jschaeppi/cvs-inv-mgmt.git'

                // Run Maven on a Unix agent.
                sh "mvn -DskipTests clean package"
                imageBuild = sh "docker build -t " + registry + ":$BUILD_NUMBER ."
                try {
                    withCredentials([usernamePassword(credentialsId: 'mycompany-github-creds', passwordVariable: '$PASS', usernameVariable: '$USER')]) {
                    sh "docker push " +imageBuild
                    echo "$BUILD_NUMBER of Image " + imageBuild + " was successfully pushed."
                    }
                } catch(ExceptionName ex) {
                echo "Image push failed!" + ex
                }
            }

            post {
                // If Maven was able to run the tests, even if some of the test
                // failed, record the test results and archive the jar file.
                success {
                    echo "Build succeeded"
                }
            }
        }
    }
}
